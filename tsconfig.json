{
  "compilerOptions": {
    "jsx": "preserve",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/public/*": [
        "public/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/shared/*": [
        "shared/*"
      ],
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "@types/next-env.d.ts",
    "@types/twin.d.ts",
    "@types/global.d.ts",
    "node_modules/eslint-plugin-react/lib/types.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
